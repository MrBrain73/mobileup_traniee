<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iconCoin"

        android:layout_width="40dp"
        android:layout_height="40dp"

        android:contentDescription="@string/icon_coin"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/titleCoin"

        android:layout_width="wrap_content"
        android:layout_height="20dp"

        android:textSize="16sp"
        android:fontFamily="@font/plusjakartasans"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconCoin"
        android:layout_marginStart="8dp"/>
    
    <TextView
        android:id="@+id/subTitleCoin"

        android:layout_width="wrap_content"
        android:layout_height="18dp"

        android:textSize="14sp"
        android:fontFamily="@font/plusjakartasans_light"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconCoin"
        android:layout_marginStart="8dp"/>
    
    <TextView
        android:id="@+id/priceCoin"

        android:layout_width="wrap_content"
        android:layout_height="20dp"

        android:textSize="16sp"
        android:fontFamily="@font/plusjakartasans"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/priceChangeCoin"

        android:layout_width="wrap_content"
        android:layout_height="18dp"

        android:textSize="14sp"
        android:fontFamily="@font/plusjakartasans_light"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>